<Window x:Class="SaintSender.DesktopUI.Views.DisposeMailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dispose Mail" Height="120" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" TextAlignment="Center" Margin="10">Do you really want to dispose this well written, fun and beautiful e-mail?</TextBlock>
        <Button Content="Yes I'm an idiot!" Width="100" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10 0 0 10"
                Click="YesBtn_Click" />
        <Button Content="Hell nah!" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 10 10"
                Click="NoBtn_Click" />
    </Grid>
</Window>